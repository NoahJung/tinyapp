<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav" >
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      
      <% if (user) { %>
        <div class="navbar justify-content-between">
          <form class="form-inline" method="POST" action="/logout">
            <span>Logged in as : <%= user.email %></span>
            <button type="submit" class="btn btn-primary my-2 my-sm-0" style="display: inline; margin-left: 1em;">Logout</button>
          </form>
        </div>
        <% } else { %>
      <div class="navbar justify-content-between">
        <form method="get" action="/login">
          <button type="submit" class="btn btn-primary my-2 my-sm-0" style="display: inline; margin-right: 1em;">Login</button>
       </form>
        <form method="get" action="/register">
          <button type="submit" class="btn btn-primary my-2 my-sm-0" style="display: inline;">Register</button>
       </form>
      </div>
      <% } %>

    </div>
  </nav>
</header>